doctype html
html.no-js[lang='en']
  head
    meta[charset='utf-8']
    /[if gte IE 8]
      |<!-->
      = stylesheet_link_tag 'app'
    /[if lt IE 8]
      = stylesheet_link_tag 'blank'
    link[rel='icon' sizes=  '32x32' href='{% asset_path logo/32.png %}']
    link[rel='icon' sizes=  '48x48' href='{% asset_path logo/48.png %}']
    link[rel='icon' sizes=  '64x64' href='{% asset_path logo/64.png %}']
    link[rel='icon' sizes='128x128' href='{% asset_path logo/128.png %}']
    link[rel='alternate' href='/rss.xml' type='application/rss+xml' title='RSS']
    meta[name='viewport' content='width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no']
    title= title
    javascript:
      document.documentElement.className='js'
    /[if lt IE 9]
      = javascript_include_tag 'vendor/html5shiv-printshiv'
  body
    header#top
      nav : a.icon-logo[href='/'] fengb
      h1 fengb.info

    main#content[class=main_class]
      = yield

      footer#legal
        span#copy Benjamin Feng &copy; #{Date.today.year}
        span#license
          | This website is licensed under
          a[rel='license' href='http://creativecommons.org/licenses/by-nc-nd/3.0/' title='Creative Commons Attribution-NonCommercial-NoDerivs 3.0 license'] CC <abbr>BY-NC-ND</abbr> 3.0

    = javascript_include_tag 'app'
